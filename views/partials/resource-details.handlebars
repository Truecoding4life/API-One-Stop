<div class="mb-4 post-dashboard animate__animated animate__fadeInUp">
  <div class="row align-items-center p-4">
    <div class="col-2 col-sm-2 col-md-1 col-lg-2 post-image-col">
      <div class="d-flex justify-content-center">
        <img src="{{image_url}}" class="post-image-dashboard" alt="resource image" />
      </div>
    </div>
    <div class="col-10 col-sm-10 col-md-11 col-lg-10 ">
      <div class="post-text-dashboard card-to-listen">
      <p class="post-id" hidden> {{id}} </p>
         </span> <h4 class="card-title text-white">  <span>{{title}}  </span>
       </h4> 
        <p class="card-text text-white timestamp"> {{createdAt}}</p>
      <p class="card-text text-white ">{{description}}.</p>
      <p class="more-detail-text"> <i class="bi bi-check-circle icon-need-fix"></i> click to view detail</p>
      </div>
    </div>
    <div class="col-12">

    </div>
  </div>
</div>