<div class="mb-4 post-dashboard animate__animated animate__fadeInUp card-to-listen">
  <span class="post-id" hidden> {{id}} </span>
  <div class="row p-4">
    <div class="col-1 col-sm-2 col-lg-1 col-xl-1 ">
      <div class="">
        <img src="{{image_url}}" class="post-image" alt="resource image" />
      </div>
    </div>
    <div class="col-11 col-sm-10 col-lg-11 homepage-post-text d-flex flex-row justify-content-between">
      <div class="">
        <h5 class="card-title home-resource-title text-white">{{title}}
          
          </h5>
       <p class=" timestamp"> {{createdAt}}</p>
        
      </div>
      <p class="more-detail-text"> <i class="bi bi-hand-index-thumb"></i> click to view detail</p>

    </div>
     <div class="col-12  homepage-post-text pt-3">
<p class="card-text text-white">{{description}}.</p>


     </div>
  </div>
</div>