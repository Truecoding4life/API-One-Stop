<div class="section">

  <div class="container-fluid p-5">
    <div class="row">
      <div class="col-12 text-center">
        <div class="form-title text-white mb-4">
          <h3 class="header"> Lets get started </h3>
          <div class="row">
            <div class="col-8 col-sm-9 col-md-10">
              <select
                id="searchByCategory"
                class="form-select custom-input-search"
              >
                <option selected>Search by category</option>
                <option value="1" id="sports">sports</option>
                <option value="2" id="food">food</option>
                <option value="3" id="music">music</option>
                <option value="4" id="weather">weather</option>
                <option value="5" id="events">events</option>
                <option value="6" id="gaming">gaming</option>
                <option value="7" id="technologies">technologies</option>
                <option value="8" id="shopping">shopping</option>
              </select>
            </div>
            <div class="col-4 col-sm-3 col-md-2">
              <button
                type="button"
                id="search-btn"
                class="btn search-button"
              >search</button>
            </div>
          </div>

        </div>
      </div>
      <div class="col-12">
        <h3 class="header">
          Result by category :
          <span id="categoryIdConverter"></span>
        </h3>
      </div>
      {{#each resources as |resource|}}
        <div class="col-12">

          <div class="card m-3 post-dashboard animate__animated animate__fadeInUp">
            <div class="row align-items-center">
              <p id="time-display"> </p>
              <div
                class="col-12 col-sm-4 col-md-3 d-flex justify-content-center"
              >
                <img
                  src="{{image_url}}"
                  class="card-img-top result-card-image smaller-image"
                />
              </div>
              <div class="card-body col-12 col-md-9 col-sm-8">
                <h2 class="'card-title result-card-text">{{title}} </h2>

                <h5 class="card-text result-card-text">{{createdAt}}</h5>
                <p class="card-text result-card-text">{{description}}</p>

                <a href="/resource/{{id}}" class="btn post-button">View Detail</a>
              </div>
            </div>
          </div>

        </div>
      {{/each}}

    </div>
  </div>
</div>